{
  "version": 2,
  "builds": [
    { "src": "backend/src/api/index.ts", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "backend/src/api/index.ts" },
    { "src": "/(.*)", "dest": "/dist/index.html" }
  ]
}
